<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Login">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comic_sans"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="@color/colorBlueNew"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/comic_sans"
        android:gravity="center"
        android:text="@string/read_free_bedtime_stories"
        android:textColor="@color/colorBlueNew"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/write2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/write"
        android:fontFamily="@font/comic_sans"
        android:gravity="center"
        android:text="@string/and_other_stories"
        android:textColor="@color/colorBlueNew"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageMain"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_below="@id/write"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/book" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageMain"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_white_background"
        android:hint="@string/e_mail"
        android:paddingLeft="20dp"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_email"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_white_background"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_triangle_blue"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/login"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_create_account"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_triangle"
            android:drawableLeft="@drawable/icon_facebook"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="5dp"
            android:text="@string/facebook"
            android:textAlignment="center"
            android:textAllCaps="false" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_triangle"
            android:drawableLeft="@drawable/icon_google"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="5dp"
            android:text="Google"
            android:textAlignment="center"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/not_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comic_sans"
            android:gravity="center"
            android:text="@string/not_registered"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/Create_Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comic_sans"
            android:gravity="center"
            android:text="@string/create_an_account"
            android:textColor="@color/colorBlueNew" />
    </LinearLayout>


</RelativeLayout>




